
info:VQ:
	echo 'Name: '^$PORTNAME
	echo 'Description: '^$DESCRIPTION
	echo 'Complain to: '^$OWNER

fetch:VQ:
	webfs
	. /sys/ports/Config/ports.conf
	mkdir work
	hget $WEBSOURCE > work/$WORKFILE
	$EXTRACTCOMMAND work/$WORKFILE

build:VQ: fetch
	. /sys/ports/Config/ports.conf
	cd $BUILDPATH
	for(i in $BUILDFOR){
		objtype=$i
		$BUILDCOMMAND
	}

install:VQ: fetch build
	. /sys/ports/Config/ports.conf
	cd $BUILDPATH
	for(i in $BUILDFOR){
		objtype=$i
		$INSTALLCOMMAND
	}

clean:VQ:
	. /sys/ports/Config/ports.conf
	cd $BUILDPATH
	$CLEANCOMMAND

nuke:VQ:
	. /sys/ports/Config/ports.conf
	rm -rf work/

info:VQ:
	echo 'Name: '^$PORTNAME
	echo 'Description: '^$DESCRIPTION
	echo 'Complain to: '^$OWNER

fetch:VQ:
	if(! ~ $WEBSOURCE 0){
		webfs
		. /sys/ports/Config/ports.conf
		mkdir work
		hget $WEBSOURCE > work/$WORKFILE
		$EXTRACTCOMMAND=($EXTRACTCOMMAND 'work/'^$WORKFILE)
		$EXTRACTCOMMAND
	}
	if(! ~ $CONTRIBSOURCE 0){
		9fs sources
		dircp $CONTRIBSOURCE work/
	}

build:VQ: fetch
	if(! ~ $PATCHES 0){
		cp $PATCHES $BUILDPATH
	}
	. /sys/ports/Config/ports.conf
	cd $BUILDPATH
	for(i in $BUILDFOR){
		objtype=$i
		$BUILDCOMMAND
	}

install:VQ: fetch build
	. /sys/ports/Config/ports.conf
	cd $BUILDPATH
	for(i in $BUILDFOR){
		objtype=$i
		$INSTALLCOMMAND
	}

clean:VQ:
	. /sys/ports/Config/ports.conf
	cd $BUILDPATH
	$CLEANCOMMAND

nuke:VQ:
	. /sys/ports/Config/ports.conf
	rm -rf work/

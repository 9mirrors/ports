#!/bin/rc

rfork ne

pass=()
fail=()

mkdir -p /sys/ports
bind -bc . /sys/ports

. /sys/ports/Config/ports.conf

fn quiet {
	$* >/dev/null >[2=1]
}

fn bail {
	quiet mk nuke
	exit $"*
}

fn testone {
	port=$1
	echo $port | awk '{printf("%-30s", $1)}'
	cd /sys/ports/$port
	echo -n 'fetch.. '; quiet mk fetch || bail fetch: $status
	echo -n 'build.. '; quiet mk build || bail build: $status
	echo -n 'install.. '; quiet mk install || bail install: $status
}

fn rmone {
	port=$1
	cd $PORTS/$port
	quiet mk uninstall || bail uninstall: $status
	quiet mk nuke || exit nuke: $status
}

for (c in $CATEGORY) {
	cd /sys/ports/$c
	for (port in `{ls -l | grep '^d' | awk '{ print $10 }'}) {
		@{ testone $c/$port }
		st=$status # `{ echo $status | sed 's/.*: //g'}
		if(~ $st ''){
			echo 'ok.'
			pass=($pass $c/$port)
		}
		if not {
			echo 'failed at' $st.
			fail=($fail $c/$port)
		}
	}	
}

# uninstall afterward so ports with deps work
for (c in $CATEGORY) {
	cd /sys/ports/$c
	for (port in `{ls -l | grep '^d' | awk '{ print $10 }'}) {
		@{ rmone $c/$port }
	}
}

if(! ~ $#fail 0){
	echo
	echo fail: $fail
}
exit ''

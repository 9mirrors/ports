clean:V:
	rm -f [$OS].* *.[$OS] $CLEANFILES

nuke:V:
	rm -f *.[$OS] y.tab.? y.debug y.output [$OS].$TARG $TARG
	for (i in $TARG)
		{ rm -f /$objtype/bin/ape/$i }
	for (j in $TARG)
		{ rm -f $j.1 /sys/man/1ape/$j }

install:V:
	for (i in $TARG)
		{ cp [$OS].$i /$objtype/bin/ape/$i }
	mkdir -p /sys/man/1ape
	for (j in $TARG)
		{ cp $j.1 /sys/man/1ape/$j }

installall:V:
	for (i in $TARG)
		{ cp [$OS].$i /$objtype/bin/ape/$i }
	mkdir -p /sys/man/1ape
	for (j in $TARG)
		{ cp $j.1 /sys/man/1ape/$j }
